{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "server=(localdb)\\MSSQLLocalDB; database=FindADoctor.Appointments; integrated security=true;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;"
  },

  "JwtSettings": {
    "Issuer": "Me",
